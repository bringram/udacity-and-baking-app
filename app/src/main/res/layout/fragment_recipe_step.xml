<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_step_short_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:text="Step Short Description" />

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/exo_player_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:resize_mode="fixed_width"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_step_thumbnail_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="@string/step_thumbnail_image_content_description"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_step_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="Step description - could contain quite a bit of text" />

</LinearLayout>
